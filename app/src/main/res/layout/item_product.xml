<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginStart="@dimen/offset_10"
    android:layout_marginTop="@dimen/offset_10"
    android:layout_marginEnd="@dimen/offset_10"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/offset_4"
    app:cardElevation="@dimen/offset_2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/offset_10"
        android:layout_marginLeft="@dimen/offset_10"
        android:layout_marginEnd="@dimen/offset_10"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/iv_product_thumbnail"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:contentDescription="@null" />

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/offset_10"
            tools:text="Product" />
    </LinearLayout>


</androidx.cardview.widget.CardView>